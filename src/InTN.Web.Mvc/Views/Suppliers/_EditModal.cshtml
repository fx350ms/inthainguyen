@using InTN.Web.Models.Common.Modals
@using InTN.Suppliers.Dto

@model SupplierDto

@{
    Layout = null;
}

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditSupplier")))

<form name="SupplierEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("Name")</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="Name" value="@Model.Name" required>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("Address")</label>
            <div class="col-md-9">
                <textarea class="form-control" name="Address">@Model.Address</textarea>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("Phone")</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("Email")</label>
            <div class="col-md-9">
                <input type="email" class="form-control" name="Email" value="@Model.Email">
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Suppliers/_EditModal.js" asp-append-version="true"></script>