<div class="abp-advanced-search">
    <button class="btn btn-outline-primary mb-2" type="button" data-toggle="collapse" data-target="#ProductFilterCollapse">
        <i class="fas fa-filter"></i> Bộ lọc nâng cao
    </button>

    <a href="javascript:;" data-toggle="modal" data-target="#ProductCreateModal" class="btn bg-blue float-sm-right">
        <i class="fa fa-plus-square"></i>
        @L("Create")
    </a>

    <div class="collapse" id="ProductFilterCollapse">
        <form id="ProductSearchForm" class="form-horizontal">
            <div class="form-row">
                <div class="col-md-3">
                    <label for="Keyword">Từ khóa</label>
                    <input type="text" name="Keyword" class="form-control txt-search" placeholder="@L("Search")" />
                </div>
                <div class="col-md-3">
                    <label for="ProductTypeId">Loại sản phẩm</label>
                    <select name="ProductTypeId" class="form-control">
                        <option value="">-- Chọn loại sản phẩm --</option>
                        @foreach (var productType in Model.ProductTypes)
                        {
                            <option value="@productType.Id">@productType.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="ProductCategoryId">Danh mục sản phẩm</label>
                    <select name="ProductCategoryId" class="form-control">
                        <option value="">-- Chọn danh mục sản phẩm --</option>
                        @foreach (var productCategory in Model.ProductCategories)
                        {
                            <option value="@productCategory.Id">@productCategory.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="SupplierId">Nhà cung cấp</label>
                    <select name="SupplierId" class="form-control">
                        <option value="">-- Chọn nhà cung cấp --</option>
                        @foreach (var supplier in Model.Suppliers)
                        {
                            <option value="@supplier.Id">@supplier.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-row mt-3">
                <div class="col-md-3">
                    <label for="BrandId">Thương hiệu</label>
                    <select name="BrandId" class="form-control">
                        <option value="">-- Chọn thương hiệu --</option>
                        @foreach (var brand in Model.Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="Price">Giá bán</label>
                    <input type="number" name="Price" class="form-control" placeholder="@L("Price")" />
                </div>
                <div class="col-md-3">
                    <label for="Cost">Giá vốn</label>
                    <input type="number" name="Cost" class="form-control" placeholder="@L("Cost")" />
                </div>
                <div class="col-md-3">
                    <label for="Status">Trạng thái</label>
                    <select name="Status" class="form-control">
                        <option value="0">-- Chọn trạng thái --</option>
                        <option value="1">@L("Active")</option>
                        <option value="2">@L("Inactive")</option>
                    </select>
                </div>
            </div>

            <div class="form-row mt-3">
                <div class="col-md-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary mr-2 btn-search">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>