@using InTN.Web.Models.Common.Modals
@using InTN.Products.Dto
@using InTN.Web.Models.Products
@using InTN.Brands.Dto;
@using InTN.ProductCategories.Dto
 @using InTN.Products.Dto
 @using InTN.ProductTypes.Dto
 @using InTN.Suppliers.Dto


@model CreateProductViewModel

<div class="modal fade" id="ProductCreateModal" tabindex="-1" role="dialog" aria-labelledby="ProductCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewProduct")))
            <form name="ProductCreateForm" role="form" class="form-horizontal" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Code")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Code" asp-for="Dto.Code" required>
                            <span asp-validation-for="Dto.Code" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Name")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Name" asp-for="Dto.Name" required>
                            <span asp-validation-for="Dto.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Unit")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Unit" asp-for="Dto.Unit">
                            <span asp-validation-for="Dto.Unit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Description")</label>
                        <div class="col-md-9">
                            <textarea class="form-control" name="Description" asp-for="Dto.Description"></textarea>
                            <span asp-validation-for="Dto.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("InvoiceNote")</label>
                        <div class="col-md-9">
                            <textarea class="form-control" name="InvoiceNote" asp-for="Dto.InvoiceNote"></textarea>
                            <span asp-validation-for="Dto.InvoiceNote" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("ProductType")</label>
                        <div class="col-md-9">
                            <select class="form-control" name="ProductTypeId" asp-for="Dto.ProductTypeId">
                                <option value="">@L("SelectProductType")</option>
                                @foreach (var productType in Model.ProductTypes as List<ProductTypeDto>)
                                {
                                    <option value="@productType.Id">@productType.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Dto.ProductTypeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("ProductCategory")</label>
                        <div class="col-md-9">
                            <select class="form-control" name="ProductCategoryId" asp-for="Dto.ProductCategoryId">
                                <option value="">@L("SelectProductCategory")</option>
                                @foreach (var productCategory in Model.ProductCategories as List<ProductCategoryDto>)
                                {
                                    <option value="@productCategory.Id">@productCategory.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Dto. ProductCategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Supplier")</label>
                        <div class="col-md-9">
                            <select class="form-control" name="SupplierId" asp-for="Dto.SupplierId">
                                <option value="">@L("SelectSupplier")</option>
                                @foreach (var supplier in Model.Suppliers as List<SupplierDto>)
                                {
                                    <option value="@supplier.Id">@supplier.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Dto.SupplierId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Brand")</label>
                        <div class="col-md-9">
                            <select class="form-control" name="BrandId" asp-for="Dto.BrandId">
                                <option value="">@L("SelectBrand")</option>
                                @foreach (var brand in Model.Brands as List<BrandDto>)
                                {
                                    <option value="@brand.Id">@brand.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Dto.BrandId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Price")</label>
                        <div class="col-md-9">
                            <input type="number" class="form-control" name="Price" asp-for="Dto.Price">
                            <span asp-validation-for="Dto.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("IsActive")</label>
                        <div class="col-md-9">
                            <input type="checkbox" class="form-check-input" name="IsActive" asp-for="Dto.IsActive">
                            <span asp-validation-for="Dto.IsActive" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Attachments")</label>
                        <div class="col-md-9">
                            <input type="file" class="form-control" name="Attachments" multiple>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>