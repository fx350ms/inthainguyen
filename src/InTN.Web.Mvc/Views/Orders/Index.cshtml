@using InTN.Web.Startup
@using InTN.Authorization
@using InTN.Orders.Dto
@using InTN.Web.Models.Common.Modals
@using InTN
 

@{
    ViewBag.Title = L("Pages_Orders");
    ViewBag.CurrentPageName = PageNames.Orders;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Orders/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Orders/Index.min.js" asp-append-version="true"></script>
    </environment>

}

@section styles {
    <style>
        .select2-selection--single {
            height: 38px !important;
        }

        .select2-selection__arrow {
            top: 5px !important;
        }
    </style>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Pages_Orders")</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>

</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            
                            <div class="col-md-12">
                                @await Html.PartialAsync("~/Views/Orders/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="OrdersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("STT")</th>
                                        <th>@L("OrderCode")</th>
                                        <th>@L("CustomerName")</th>
                                        <th>@L("PhoneNumber")</th>
                                        <th>@L("OrderDate")</th>
                                        <th>@L("Note")</th>
                                        <th>@L("Deposited")</th>
                                        <th>@L("TotalAmount")</th>
                                        <th>@L("Status")</th>
                                        <th ></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
 