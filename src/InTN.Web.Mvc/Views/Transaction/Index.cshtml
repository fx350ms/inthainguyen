@using InTN.Web.Startup
@using InTN.Authorization
@using InTN.Transactions.Dto
@using InTN.Web.Models.Common.Modals
@using InTN


@{
    ViewBag.Title = L("Pages_Transactions");
    ViewBag.CurrentPageName = PageNames.Transactions;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Transactions/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Transactions/Index.min.js" asp-append-version="true"></script>
    </environment>

}

@section styles {
    <style>
        .select2-selection--single {
            height: 38px !important;
        }

        .select2-selection__arrow {
            top: 5px !important;
        }
    </style>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Pages_Transactions")</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>

</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">

                            <div class="col-md-12">
                                @await Html.PartialAsync("~/Views/Transaction/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="TransactionsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("STT")</th>
                                        <th>@L("TransactionCode")</th>
                                        <th>@L("CustomerName")</th>
                                        <th>@L("Amount")</th>
                                        <th>@L("Description")</th>
                                        <th>@L("CreationTime")</th>
                                       
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
