@using InTN.Products.Dto
@using InTN.Web.Models.ProductNotes
@using InTN.Web.Models.Common.Modals

<div class="modal fade" id="ProductNoteCreateModal" tabindex="-1" role="dialog" aria-labelledby="ProductNoteCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewProductNote")))
            <form name="ProductNoteCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-lg-6 col-md-6">
                            <label for="ProductId">@L("ProductId")</label>
                            <select class="form-control select-product-id select2  " style="min-width:350px" id="ProductId" name="ProductId" required>
                                <option value="">-- @L("SelectProduct") --</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="ParentId">@L("ParentNote")</label>
                            <select class="form-control select-parent-note select2" id="ParentId" name="ParentId">
                                <option value="">-- @L("SelectParentNote") --</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="Note">@L("Note")</label>
                            <input type="text" class="form-control" id="Note" name="Note" required>
                            <span class="text-danger"></span>
                        </div>
                    </div>

                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
 
